@model nqhDay04_ThucHanh.Models.Book

@{
    ViewData["Title"] = "Thêm mới sách";
}

<h2>Thêm mới sách</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AuthorId"></label>
        <input asp-for="AuthorId" class="form-control" />
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GenreId"></label>
        <input asp-for="GenreId" class="form-control" />
        <span asp-validation-for="GenreId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalPage"></label>
        <input asp-for="TotalPage" class="form-control" />
        <span asp-validation-for="TotalPage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ảnh bìa</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu lại</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>